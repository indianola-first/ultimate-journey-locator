{
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-production-server;Database=your-production-database;User ID=your-production-user;Password=your-production-password;TrustServerCertificate=true;"
  },
  "Cors": {
    "AllowedOrigins": [
      "https://yourdomain.smarterasp.net",
      "https://www.yourdomain.smarterasp.net"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "LocationFinder.API": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "LocationFinder.API": "Information"
      },
      "FormatterName": "json",
      "FormatterOptions": {
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
        "UseUtcTimestamp": true
      }
    },
    "File": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "LocationFinder.API": "Information"
      },
      "Path": "logs/locationfinder-{Date}.log",
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 30,
      "RetainedFileCountLimit": 30
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "LocationFinder.API": "Information"
      }
    }
  },
  "AllowedHosts": "yourdomain.smarterasp.net,www.yourdomain.smarterasp.net",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001",
        "Certificates": {
          "Default": {
            "Path": "your-ssl-certificate.pfx",
            "Password": "your-certificate-password"
          }
        }
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100,
      "MaxRequestBodySize": 52428800,
      "KeepAliveTimeout": "00:02:00",
      "RequestHeadersTimeout": "00:00:30"
    }
  },
  "HealthChecks": {
    "Database": {
      "Timeout": "00:00:10",
      "RetryCount": 3
    },
    "Memory": {
      "ThresholdMB": 512
    },
    "Disk": {
      "ThresholdPercentage": 90
    }
  },
  "RateLimiting": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "Window": "00:01:00",
    "SegmentsPerWindow": 10
  },
  "Security": {
    "EnableHttpsRedirection": true,
    "EnableHsts": true,
    "HstsMaxAge": 365,
    "IncludeSubDomains": true,
    "Preload": true
  },
  "Performance": {
    "EnableResponseCompression": true,
    "EnableResponseCaching": true,
    "CacheTimeout": "00:05:00",
    "MaxConcurrentRequests": 100
  }
}
